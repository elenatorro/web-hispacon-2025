---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/container.astro";
import Sectionhead from "@/components/sectionhead.astro";
import Schedule from "@/components/schedule.astro";
---

<Layout title="Ejemplo de Horarios">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Componente de Horario</Fragment>
      <Fragment slot="desc">
        Demostraci√≥n de los diferentes layouts del componente de horario
      </Fragment>
    </Sectionhead>

    <!-- Vertical Layout -->
    <div class="mt-12">
      <h2 class="text-2xl font-bold mb-6">Layout Vertical</h2>
      <Schedule layout="vertical" showDescription={true} />
    </div>

    <!-- Horizontal Layout -->
    <div class="mt-16">
      <h2 class="text-2xl font-bold mb-6">Layout Horizontal</h2>
      <Schedule layout="horizontal" showDescription={false} />
    </div>

    <!-- Compact Vertical (without descriptions) -->
    <div class="mt-16">
      <h2 class="text-2xl font-bold mb-6">Layout Vertical Compacto</h2>
      <Schedule layout="vertical" showDescription={false} />
    </div>
  </Container>
</Layout>
